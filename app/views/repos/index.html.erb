<div class="row">
  <div class="col-sm-8">
    <h2 class="">Projects that need your help</h2>

    <div class="row">
      <div class="col-sm-4">
        <h3>Filters</h3>

        <ul>
          <li>
            <label>Programming Language: </label><%= select_tag(:programming_language,
              options_for_select(@programming_languages, params["programming_language"]),
              include_blank: "Any",
              class: "filter-repos form-control") %>
          </li>
          <li>
            <label>Language: </label><%= select_tag(:language,
              options_for_select(@languages.collect{ |b| [b.upcase, b] }, params["language"]),
              include_blank: "Any",
              class: "filter-repos form-control") %>
          </li>
          <li>By project stars range </li>
          <li>By forks number range</li>
        </ul>
      </div>
      <div class="col-sm-8">
        <h3>Projects</h3>
        <ul class="repos">
          <% @repos.each do |repo| %>
            <li>
              <a href="<%= repo_path repo %>">
                <%= repo.name %> (<%= repo.full_name %>)
              </a>
              <%= raw "<span class='label label-primary'>#{repo.github_programming_language}</span>" if repo.github_programming_language.present? %>
              <%= raw "<span class='label label-warning'><span class='glyphicon glyphicon-star' aria-hidden='true'></span> #{repo.github_stargazers_count}</span>" if repo.github_stargazers_count.present? %>
              <%= raw "<span class='label label-info'><span class='glyphicon glyphicon-transfer' aria-hidden='true'></span> #{repo.github_forks}</span>" if repo.github_forks.present? %>
              <%= raw "<span class='label label-danger'><span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span> #{repo.github_open_issues}</span>" if repo.github_open_issues.present? %>
              <%= raw "<p>#{emojify(repo.github_description)}</p>" if repo.github_description.present? %>
            </li>
          <% end %>
        </ul>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <h2>Needs some help?</h2>
    <h3><%= current_user.nickname %> repos</h3>

    <ul>
      <% @user_repos.each do |repo| %>
        <li><a href="<%= new_repo_path repo.id %>"><%= repo.full_name %></a></li>
      <% end %>
    </ul>
  </div>
</div>
