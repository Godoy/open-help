<div class="panel panel-default repo">
  <div class="panel-heading">
    <a href="<%= repo.github_html_url %>" target="_blank">
      <h3 class="panel-title">
        <%= repo.name %> (<%= repo.full_name %>)

        <%= raw "<span class='pull-right label label-primary'>#{repo.github_programming_language}</span>" if repo.github_programming_language.present? %>

      </h3>
    </a>
  </div>
  <div class="panel-body">
    <%= raw "<p>#{emojify(repo.github_description)}</p>" if repo.github_description.present? %>
    <p>

      <%= render "repos/counters", repo: repo %>
    </p>
    <%= raw "<p>#{emojify(repo.necessity)}</p>" if repo.necessity.present? %>
    <p class="pull-right"><%= render "users/resume", user: repo.user %></p>
  </div>
</div>
